use("erp");

db.vendas.aggregate([
  {
    $match: {
      $and: [
        { status: { $in: ["ENTREGUE", "EM SEPARACAO"] } },
        { dataVenda: {
          $gte: ISODate('2019-01-01'),
          $lte: ISODate('2019-12-31')
        }}
      ]
    }
  },
  {
    $group: {
      _id: "$clienteId",
      total: { $sum: "$valorTotal" }
    }
  },
  {
    $sort: {
      total: -1
    }
  },
  {
    $limit: 10
  }
]);